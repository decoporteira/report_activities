
<div class="text-center">

    <div class="mb-4 mt-5 ">
      <%=link_to image_tag("https://englishglobe.com.br/wp-content/themes/english/images/logo.png", width: 140, border: 0), {action: 'index', controller: '/home'}, {class: 'dock-item '} %>
    </div>
  <h2>Alterar sua senha</h2>
  <div class='d-inline-flex flex-column p-2'>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="field">
      <%= f.label :password, "Nova senha" %><br />
      <% if @minimum_password_length %>
        <em>(mÃ­nimo de <%= @minimum_password_length %> caracteres)</em><br />
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "Confirmar senha" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="actions my-3">
      <%= f.submit "Alterar minha senha", class:'btn btn-primary btn-lg ' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
  </div>
</div>
