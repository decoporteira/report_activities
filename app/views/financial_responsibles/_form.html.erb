<div class="w-100">
  <% if @financial_responsible.errors.any? %>
    <div class="alert alert-danger">
      <ul>
        <% @financial_responsible.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= form_with(model: @financial_responsible) do |form| %>
    <% if @student.present? %>
      <%= form.hidden_field :student_id, value: @student.id %>
    <% end %>
    <div class="mb-3">
      <%= form.label :name, class: 'form-label' %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>
    <div class="mb-3">
      <%= form.label :cpf, class: 'form-label' %>
      <%= form.text_field :cpf, class: 'form-control' %>
    </div>
    <div class="mb-3">
      <%= form.label :phone, class: 'form-label' %>
      <%= form.text_field :phone, class: 'form-control' %>
    </div>
    <div class="mb-3">
      <%= form.label :email, class: 'form-label' %>
      <%= form.text_field :email, class: 'form-control' %>
    </div>
    <%= form.submit 'Salvar', class: 'btn btn-primary' %>
  <% end %>
</div>
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>
<script>
  document
    .getElementById("financial_responsible_cpf")
    .addEventListener("input", function (e) {
      let x = e.target.value
        .replace(/\D/g, "")
        .match(/(\d{0,2})(\d{0,3})(\d{0,3})(\d{0,4})(\d{0,2})/);
      e.target.value = !x[2]
        ? x[1]
        : x[1] +
          "." +
          x[2] +
          (x[3] ? "." : "") +
          x[3] +
          (x[4] ? "/" : x[4]) +
          x[4] +
          (x[5] ? "-" + x[5] : "");

      if (e.target.value.length < 15) {
        x = e.target.value
          .replace(/\D/g, "")
          .match(/(\d{0,3})(\d{0,3})(\d{0,3})(\d{0,2})/);
        e.target.value = !x[2]
          ? x[1]
          : x[1] +
            "." +
            x[2] +
            (x[3] ? "." : "") +
            x[3] +
            (x[4] ? "-" + x[4] : "");
      }
    });
  $(document).ready(function () {
    $("#financial_responsible_phone").mask("(99) 99999-9999");
  });
  $(document).ready(function () {
    $("#phone").mask("(99) 9999-9999");
  });
</script>
