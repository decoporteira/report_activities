<% if @student.present? %>
  <%= form_with(model: @financial_responsible, local: true) do |form| %>
    <%= form.hidden_field :student_id, value: @student.id %>
    <%= form.label :name %>
    <%= form.text_field :name %>
    <%= form.label :cpf %>
    <%= form.text_field :cpf %>
    <%= form.label :phone %>
    <%= form.text_field :phone %>
    <%= form.label :email %>
