<%= render @plan %>
<div>
  <%=
    link_to 'Back to Plans',
            plans_path,
            class: 'btn btn-outline-primary',
            style: 'width:200px'
  %>
  <% if current_user.admin?%>
    <%
      button_to 'Destroy this Plan',
                @plan,
                method: :delete,
                form: { data: { turbo_confirm: 'Are you sure?' } },
                class: 'btn btn-danger mt-4',
                style: 'width:200px'
    %>
  <% end %>
</div>