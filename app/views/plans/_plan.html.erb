<div id="<%= dom_id @plan %>"></div>
<div class="container col-xxl-8 px-4 py-5">
  <div class="row flex-lg-row-reverse g-5 py-5">
    <div class="col-10 col-sm-8 col-lg-6">
        
    </div>
    <div class="col-lg-6">
      <h1 class="display-5 fw-bold text-body-emphasis lh-1 mb-3"><%= @plan.plan_type%></h1>
      <p class="lead">
  
        <dt>Nome do plano: </dt>
        <dd><%=@plan.plan_type%></dd>
        <dt>Valor da mensalidade: </dt>
        <dd><%=
                number_to_currency(
                  @plan.price,
                  unit: 'R$ ',
                  separator: ',',
                  delimiter: '.',
                  precision: 2,
                )
              %></dd>
     
    </p>
    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
      <%= link_to "Edit this Plan", edit_plan_path(@plan), class:'btn btn-outline-primary', style:"width:150px" %>
    </div>
  </div>
</div>
