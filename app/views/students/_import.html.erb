<div class="card" style="width: 25rem;">
  <div class="card-body">
    <h5 class="card-title">Importar alunos:</h5>
    <h6 class="card-subtitle mb-2 text-body-secondary">Selecione a Turma:</h6>
    <p class="card-text">
      <%= form_with url: import_students_path, method: :post do |form| %>
        <%=
          form.collection_select :classroom_id, Classroom.all, :id, :name
        %><br /><br />
        <%= form.file_field :file, accept: '.csv' %><br /><br />
        <%= form.button 'Import' %><br />
      <% end %>
    </p>
    <%#
      <a href="#" class="card-link">Card link</a>
      <a href="#" class="card-link">Another link</a>
    %>
  </div>
</div>
