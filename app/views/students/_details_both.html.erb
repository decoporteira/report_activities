<h3>Cursos:  <% if @student.current_plan %>
    <span class='text-success'><%= @student.current_plan.plan.name %></span>
  <% else %>
    <%= link_to 'Cadastrar um plano', new_current_plan_path(student_id: @student.id) %>
  <% end %></h3>
<p class="lead"></p>
<dl>
  <div class='card mb-4 rounded-3 shadow-sm p-3 border-success bg-body-tertiary'>
    <h5 class='text-success'> Detalhes da Aula Particular</h5>
    <dt>Professor(a) Particular: </dt>
    <dd>
      <%=  @student.current_plan&.teacher.nil? ? 'Professor(a) não cadastrado' : @student.current_plan.teacher.name %>
    </dd>
  </div>
  <div class='card mb-4 rounded-3 shadow-sm p-3 border-primary bg-body-tertiary'>
    <h5 class='text-primary'>Detalhes da Aula em Turma</h5>
    <% if @student.classroom.nil?%>
      <dt>Turma: </dt>
      <dd> <strong>Não possui turma cadastrada.</strong> </dd>
      <dt>Professor(a) da turma: </dt>
      <dd> <strong>Não possui professor(a) cadastrado(a).</strong> </dd>
    <% else %>
      <dt>Turma: </dt>
      <dd> <%= @student.classroom.name %> </dd>
      <dt>Professor(a) da turma: </dt>
      <dd> <%= @student.classroom.teacher.name %> </dd>
      <dt>Horário: </dt>
      <dd> <%= @student.classroom.time %></dd>
    <% end %>
  </div>
  <dt>Status: </dt>
  <dd class="<%= @student.status == 'registered' ? 'text-warning' : 'text-danger' %>">
    <strong><%= I18n.t(@student.status) %></strong>
  </dd>
  <dt>Telefone celular: </dt>
  <dd><%= @student.cel_phone.present? ? @student.cel_phone : "Telefone celular não cadastrado."%></dd>
  <dt>Email: </dt>
  <dd><%= @student.email.present? ? @student.email : "Email não cadastrado."%></dd>
  <dt>CPF: </dt>
  <dd><%= @student.cpf.present? ? @student.cpf : "CPF não cadastrado."%></dd>
</dl>