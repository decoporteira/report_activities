<h3>Cursos:  <% if @student.current_plan %>
    <span class='text-success'><%= @student.current_plan.plan.name %></span>
  <% else %>
    <%= link_to 'Cadastrar um plano', new_current_plan_path(student_id: @student.id) %>
  <% end %></h3>
<p class="lead"></p>
<dl>
  <dt>Professor(a) Particular: </dt>
  <dd>
    <%=  @student.current_plan&.teacher.nil? ? 'Professor(a) n達o cadastrado' : @student.current_plan.teacher.name %>
  </dd>
  <dt>Status: </dt>
  <dd class="<%= @student.status == 'registered' ? 'text-warning' : 'text-danger' %>">
    <strong><%= I18n.t(@student.status) %></strong>
  </dd>
  <dt>Telefone celular: </dt>
  <dd><%= @student.cel_phone.present? ? @student.cel_phone : "Telefone celular n達o cadastrado."%></dd>
  <dt>Email: </dt>
  <dd><%= @student.email.present? ? @student.email : "Email n達o cadastrado."%></dd>
  <dt>CPF: </dt>
  <dd><%= @student.cpf.present? ? @student.cpf : "CPF n達o cadastrado."%></dd>
</dl>