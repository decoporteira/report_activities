  <%= responsible.name%> | 
<% end %>
</h4>

<div class=''>
  <table class="fs-9 mb-0 border-top border-translucent table">
    <thead>
      <tr>
        <th style="width: 30%;">Vencimento</th>
        <th style="width: 20%;">Valor</th>
        <th style="width: 20%;">Status</th>
        <th style="width: 20%;">Status</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <% @monthly_fees.each do |month| %>
          <tr>
            <td><%= month.due_date.strftime("%d/%m") %></td>
            <td>R$ <%= month.value %></td>
            <td><%= month.status %></td>
            <td style='flex: auto;display: flex;'>  
              <%= button_to 'Pago', update_paid_monthly_fee_path(month), method: :patch, class:"btn btn-outline-primary btn-sm" %>
              <%= button_to 'Atrasado', update_late_monthly_fee_path(month), method: :patch, class:"btn btn-outline-primary btn-sm mx-2" %>
              <%= button_to 'Pendente', update_pending_monthly_fee_path(month), method: :patch, class:"btn btn-outline-primary btn-sm" %>
            </td>   
          </tr>
        <% end %>
      </tr>
    </tbody>
  </table>
  <%= link_to 'Cadastrar Mensalidade', new_student_monthly_fee_path(@student), class: 'btn btn-primary mb-2' %>
</div>
