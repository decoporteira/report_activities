<h1>Nova mensalidade</h1>

<%= render 'form', monthly_fee: @monthly_fee %>

<br />

<div>
  <%=
    link_to 'Back to student',
            classrooms_path,
            class: 'btn btn-outline-primary',
            style: 'width:200px'
  %>
  <% if current_user.admin? %>
    <%=
      button_to 'Apagar',
                student_monthly_fee_path(@monthly_fee.student_id),
                method: :delete,
                class: 'btn btn-outline-danger mt-4',
                style: 'width:200px'
    %>
  <% end %>
</div>

