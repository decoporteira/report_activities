<div class="d-flex justify-content-between">
  <h1 class="text-primary">Activities</h1>
  <%= link_to "New activity", new_activity_path, class:'btn btn-primary', style:"width:150px;height: 40px;"  %></div>
<div class="album py-5 bg-body-tertiary">
  <div class="container">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
      <%if current_user.teacher? %>
        <%current_user.teacher.classrooms.each do |classroom| %>
          <%classroom.students.each do |student|%>
            <div class="col">
              <div class="card shadow-sm">
                <div class="card-header py-1">
                  <h4 class="my-1 fw-normal fs-5"><%= student.name %></h4>
                </div>
                <div class="card-body">
                  <p class="card-text"></p>
                  <p><strong>Turma: </strong><%= student.classroom.name %></p>
                  <p>
                    <strong>Teacher: </strong><%= Teacher.find_by(id: student.classroom.teacher.id).name %>
                  </p>
                </div>
              </div>
            </div>
          <%end%>
        <% end %>
      <% elsif current_user.admin? || current_user.accounting?  %>
        <%  %>
        <% @students.each do |student| %>
          <div class="col">
            <div class="card shadow-sm">
              <div class="card-header py-1">
                <h4 class="my-1 fw-normal fs-5"><%= student.name %></h4>
              </div>
              <div class="card-body">
                <p class="card-text"></p>
                <p><strong>Turma: </strong><%= student.classroom.name %></p>
                <p>
                  <strong>Teacher: </strong><%= Teacher.find_by(id: student.classroom.teacher.id).name %>
                </p>
                <%= link_to ' Ver Atividades ', activities_by_student_student_path(student),class:'btn btn-outline-primary', style:"width:200px" %>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
